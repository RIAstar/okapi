{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../open-api-spec/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.js",
    "src/**/*.spec.js"
  ]
}
